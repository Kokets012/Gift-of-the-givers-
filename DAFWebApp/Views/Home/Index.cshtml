@{
    ViewData["Title"] = "Welcome";
}

<div class="text-center py-5">
    <h1 class="display-4 fw-bold">Welcome to DAF WebApp 🌍</h1>
    <p class="lead">Your platform to manage <strong>Volunteers</strong>, <strong>Donations</strong>, and <strong>Incidents</strong> efficiently.</p>
    <a href="/Volunteer/Register" class="btn btn-primary btn-lg mt-3">Become a Volunteer</a>
    <a href="/Donations" class="btn btn-success btn-lg mt-3">Make a Donation</a>
</div>

<hr class="my-5" />

<div class="row text-center">
    <div class="col-md-4">
        <div class="card shadow border-0">
            <div class="card-body">
                <h5 class="card-title">🙋 Volunteers</h5>
                <p class="card-text">Register, manage, and assign volunteers to meaningful tasks.</p>
                <a href="/Volunteer" class="btn btn-outline-primary">View Volunteers</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow border-0">
            <div class="card-body">
                <h5 class="card-title">💰 Donations</h5>
                <p class="card-text">Track donations, manage donors, and support community needs.</p>
                <a href="/Donations" class="btn btn-outline-success">View Donations</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow border-0">
            <div class="card-body">
                <h5 class="card-title">⚠️ Incidents</h5>
                <p class="card-text">Log incidents, monitor responses, and manage community safety.</p>
                <a href="/Incident" class="btn btn-outline-danger">View Incidents</a>
            </div>
        </div>
    </div>
</div>
