@model IEnumerable<DAFWebApp.Models.VolunteerTask>
<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr><th>Title</th><th>Description</th><th>Date</th><th>Volunteers</th><th>Actions</th></tr>
    </thead>
    @foreach (var task in Model)
    {
        <tr>
            <td>@task.Title</td>
            <td>@task.Description</td>
            <td>@task.Date.ToShortDateString()</td>
            <td>@string.Join(", ", task.Volunteers?.Select(v => v.Name) ?? new List<string>())</td>
            <td><a asp-action="Assign" asp-route-taskId="@task.TaskId">Assign Volunteer</a></td>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-action="Create">Create Task</a>
