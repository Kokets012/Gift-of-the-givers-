@model DAFWebApp.Models.Incident

<h2>Delete Incident</h2>

<h3>Are you sure you want to delete this incident?</h3>

<div>
    <strong>Title:</strong> @Model.Title <br />
    <strong>Location:</strong> @Model.Location <br />
    <strong>Date Reported:</strong> @Model.DateReported.ToShortDateString() <br />
    <strong>Reported By:</strong> @Model.UserId <br />
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="UserId" />
    <button type="submit">Delete</button> |
    <a asp-action="Index">Cancel</a>
</form>
