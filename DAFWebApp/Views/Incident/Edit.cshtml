@model DAFWebApp.Models.Incident

<h2>Edit Incident</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IncidentId" />

    <div>
        <label>Title</label>
        <input asp-for="Title" />
    </div>

    <div>
        <label>Location</label>
        <input asp-for="Location" />
    </div>

    <div>
        <label>Date Reported</label>
        <input asp-for="DateReported" type="date" />
    </div>

    <div>
        <label>Reported By</label>
        <input asp-for="User" />
    </div>

    <button type="submit">Save</button>
</form>
