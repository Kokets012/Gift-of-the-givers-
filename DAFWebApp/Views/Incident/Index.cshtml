@model IEnumerable<DAFWebApp.Models.Incident>

<div class="d-flex justify-content-between mb-3">
    <h2>Reported Incidents</h2>
    <a asp-action="Create" class="btn btn-danger">+ Report Incident</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="text-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-hover shadow">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Location</th>
            <th>Description</th>
            <th>Date</th>
            <th>Reported By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var incident in Model)
        {
            <tr>
                <td>@incident.Title</td>
                <td>@incident.Location</td>
                <td>@incident.Description</td>
                <td>@incident.DateReported.ToString("g")</td>
                <td>@incident.User?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@incident.IncidentId" class="btn btn-primary btn-sm ">View</a>|
                    <a asp-action="Edit" asp-route-id="@incident.IncidentId" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@incident.IncidentId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary btn-lg mt-3" asp-action="Create">Report New Incident</a>
