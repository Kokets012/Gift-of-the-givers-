@model DAFWebApp.Models.Donation

@{
    ViewData["Title"] = "Add Donation";
}

<h2>Add Resource Donation</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ResourceName"></label>
        <input asp-for="ResourceName" class="form-control" />
        <span asp-validation-for="ResourceName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DonorName"></label>
        <input asp-for="DonorName" class="form-control" />
        <span asp-validation-for="DonorName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactInfo"></label>
        <input asp-for="ContactInfo" class="form-control" />
        <span asp-validation-for="ContactInfo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Submit Donation</button>
    <a asp-action="Index" class="btn btn-secondary">Back to Donations</a>
</form>
