@model IEnumerable<DAFWebApp.Models.Volunteer>
@{
    ViewData["Title"] = "Volunteers";
}

<div class="d-flex justify-content-between mb-3">
    <h2>Volunteers</h2>
    <a asp-action="Register" class="btn btn-primary">+ Add Volunteer</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No volunteers found.</div>
}
else
{
    <table class="table table-striped table-hover shadow">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Tasks</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.Name</td>
                    <td>@v.Email</td>
                    <td>@(v.VolunteerTasks?.Count ?? 0)</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@v.VolunteerId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this volunteer?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
