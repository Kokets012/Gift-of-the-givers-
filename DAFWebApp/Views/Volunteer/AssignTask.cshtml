@model DAFWebApp.Models.Volunteer
@{
    ViewData["Title"] = "Assign Task";
    var tasks = ViewBag.Tasks as IEnumerable<DAFWebApp.Models.VolunteerTask>;
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-3">Assign Task to: <strong>@Model.Name</strong></h4>

                <div class="mb-3">
                    <label class="form-label">Current Tasks</label>
                    @if (Model.VolunteerTasks != null && Model.VolunteerTasks.Any())
                    {
                        <div>
                            @foreach (var t in Model.VolunteerTasks)
                            {
                                <span class="badge bg-info text-dark me-1">@t.Title</span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-muted">No tasks assigned yet.</div>
                    }
                </div>

                <form asp-action="AssignTask" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="volunteerId" value="@Model.VolunteerId" />

                    <div class="mb-3">
                        <label class="form-label">Select Task</label>
                        <select name="taskId" class="form-select" required>
                            <option value="">-- Select a Task --</option>
                            @if (tasks != null)
                            {
                                foreach (var t in tasks)
                                {
                                    <option value="@t.TaskId">@t.Title (@t.Date.ToShortDateString())</option>
                                }
                            }
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">Assign Task</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
